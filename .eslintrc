{
  "extends": [
    "plugin:vue/essential",
    "eslint:recommended",
    "@vue/prettier"
  ],
  "rules": {
    "import/no-extraneous-dependencies": 0,
    "import/no-cycle": 0,
    "max-len": "off"
  },
  "env": {
    "browser": true,
    "node": true
  },
  "globals": {
    "App": "readonly"
  },
  "root": true,
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "overrides": [
    {
      "files": "cypress/**/*.js",
      "globals": {
        "Cypress": "readonly",
        "cy": "readonly",
        "describe": "readonly",
        "it": "readonly"
      }
    }
  ]
}
