<div class="filterGroup">
    <aside><img :src="icon" alt="" /></aside>
    <main>
        <h1>{{ label }}</h1>
        <div v-for="(option, index) in options">
            <input v-model="option.checked" type="checkbox" :id="id + '-' + (option.id || index)" :value="option.value">
            <label :for="id + '-' + (option.id || index)" class="label-inline">{{ option.label }}</label><br/>
        </div>
    </main>
</fieldset>