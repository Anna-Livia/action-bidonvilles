<ul class="nav__links">
    <li v-for="item in items" class="nav__item">
        <div v-if="item.items" class="dropdown">{{ item.label }}
            <div class="dropdown-content">
                <router-link v-for="subitem in item.items" :to="subitem.target" v-bind:class="subitem.group ? { active: isCurrentRouteAMemberOf(subitem.group) } : {}">{{ subitem.label }}</router-link>
            </div>
        </div>

        <router-link v-else :to="item.target" v-bind:class="item.group ? { active: isCurrentRouteAMemberOf(item.group) } : {}">{{ item.label }}</router-link>
    </li>
</ul>